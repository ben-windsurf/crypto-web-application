{
  "name": "crypto-web-application",
  "version": "1.0.0",
  "description": "A comprehensive web application for cryptocurrency trading and analytics with real-time data visualization and portfolio management",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8080 -o",
    "dev": "npx live-server --port=8080 --open=/index.html",
    "test": "npm run test:playwright",
    "test:jest": "jest",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:ui": "playwright test --ui",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "build": "npm run lint && npm run test",
    "serve": "python3 -m http.server 8080"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "dashboard",
    "bitcoin",
    "ethereum",
    "portfolio",
    "real-time",
    "charts",
    "semantic-ui",
    "coingecko-api"
  ],
  "author": "Ben Lehrburger <benlehrburger@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benlehrburger/crypto-web-application.git"
  },
  "homepage": "https://github.com/benlehrburger/crypto-web-application#readme",
  "bugs": {
    "url": "https://github.com/benlehrburger/crypto-web-application/issues"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.7.1",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jquery": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "globals": {
      "Chart": "readonly",
      "$": "readonly",
      "jQuery": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
